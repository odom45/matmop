<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matmop.app">

    <!-- Allow networking for WebView or future network calls -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="MATMOP"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.matmop.app.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.matmop.app.GalleryActivity" />
        <activity android:name="com.matmop.app.ImageViewerActivity" />
        <activity android:name="com.matmop.app.PdfViewerActivity" />
    </application>

</manifest>
